# Core runtime
APP_ENV=development
DATABASE_URL=sqlite:///./upstate_agent.db
LOG_LEVEL=INFO

# OpenAI
OPENAI_API_KEY=
DEFAULT_MODEL=gpt-4.1-mini
FALLBACK_MODEL=gpt-4.1
EMBEDDING_MODEL=text-embedding-3-small

# Admin and security
ADMIN_API_KEY=change-me
PHI_REDACTION_ENABLED=true

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_VALIDATE_SIGNATURES=false

# SMTP for escalations/digest
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
ESCALATION_EMAIL_TO=frontdesk@example.com
ESCALATION_EMAIL_FROM=bot@example.com

# Website crawler
KB_SOURCE_URLS=https://www.upstatehearingandbalance.com/,https://www.upstatehearingandbalance.com/contact-us,https://www.upstatehearingandbalance.com/services,https://www.upstatehearingandbalance.com/insurance-financing
MANUAL_POLICY_APPROVAL=true
